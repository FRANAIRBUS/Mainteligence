rules_version = '2';
 
service cloud.firestore {
  match /databases/{database}/documents {
 
    function isSignedIn() {
      return request.auth != null;
    }

    function isOperario() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'operario';
    }

    function isMantenimiento() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['mantenimiento', 'admin'];
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
 
    match /users/{userId} {
      allow get: if isOwner(userId) || isMantenimiento();
      allow list: if isMantenimiento();
      // Allow creation for new users signing up or admins creating profiles
      allow create: if isSignedIn();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin() && !isOwner(userId);
    }

    // Catalog collections are readable by any authenticated user
    // but only writable by admins.
    match /sites/{siteId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /departments/{departmentId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /assets/{assetId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /tickets/{ticketId} {
      allow get: if isSignedIn() && (isMantenimiento() || resource.data.createdBy == request.auth.uid || resource.data.assignedTo == request.auth.uid);
      // A user can list tickets if they are admin/maintenance, OR
      // if the query is filtering by createdBy or assignedTo their own UID.
      allow list: if isMantenimiento() || (isOperario() && (request.query.getRules().where.get('createdBy') == request.auth.uid || request.query.getRules().where.get('assignedTo') == request.auth.uid));
      allow create: if isSignedIn();
      allow delete: if isAdmin();
      allow update: if 
        isMantenimiento() ||
        (isOperario() && resource.data.createdBy == request.auth.uid &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['priority', 'updatedAt']));
    }

    match /tickets/{ticketId}/comments/{commentId} {
      allow read, create: if isMantenimiento() || get(/databases/$(database)/documents/tickets/$(ticketId)).data.createdBy == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    match /settings/{settingId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
