rules_version = '2';
 
service cloud.firestore {
  match /databases/{database}/documents {
 
    function isAdmin() {
      if (request.auth == null) {
        return false;
      }
      // Use exists() to avoid errors on non-existent documents
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) && userDoc.data.role == 'admin';
    }

    function isMantenimiento() {
      if (request.auth == null) {
        return false;
      }
      let userRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return userRole == 'mantenimiento' || userRole == 'admin';
    }
 
    match /users/{userId} {
      allow get: if request.auth.uid == userId || isMantenimiento();
      allow list: if isMantenimiento();
      allow create: if isAdmin(); // Only admins can create users through the backend for now
      allow update: if isAdmin() || request.auth.uid == userId;
      allow delete: if isAdmin();
    }

    match /sites/{siteId} {
      allow get, list: if request.auth != null;
      allow write: if isAdmin();
    }

    match /departments/{departmentId} {
      allow get, list: if request.auth != null;
      allow write: if isAdmin();
    }

    match /assets/{assetId} {
      allow get, list: if request.auth != null;
      allow write: if isAdmin();
    }

    match /tickets/{ticketId} {
      allow get: if request.auth != null && (isMantenimiento() || resource.data.createdBy == request.auth.uid || resource.data.assignedTo == request.auth.uid);
      // Admin/Mantenimiento can list all. Operario can list tickets created by or assigned to them.
      allow list: if isMantenimiento() || (request.auth != null && (request.query.where.field == 'createdBy' || request.query.where.field == 'assignedTo'));
      allow create: if request.auth != null;
      allow delete: if isAdmin();
      allow update: if 
        isMantenimiento() ||
        // Operario can only change priority of their own tickets
        (request.auth.uid == resource.data.createdBy &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['priority', 'updatedAt']));
    }

    match /tickets/{ticketId}/comments/{commentId} {
      allow read, create: if isMantenimiento() || get(/databases/$(database)/documents/tickets/$(ticketId)).data.createdBy == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    match /settings/{settingId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
