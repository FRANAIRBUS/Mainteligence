rules_version = '2';
 
service cloud.firestore {
  match /databases/{database}/documents {
 
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      // Check the user's role from their document in the /users collection.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
 
    match /users/{userId} {
      allow read;
      // Allow write if the user is an admin or is modifying their own profile.
      allow write: if isAdmin() || isOwner(userId);
    }

    match /sites/{siteId} {
        allow read, write: if isAdmin();
    }

    match /departments/{departmentId} {
        allow read, write: if isAdmin();
    }

    match /assets/{assetId} {
        allow read, write: if isAdmin();
    }

    match /tickets/{ticketId} {
        allow read: if request.auth.uid == resource.data.createdBy || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['mantenimiento', 'admin'];
        allow create: if request.auth.uid != null;
        allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['mantenimiento', 'admin'] || (request.auth.uid == resource.data.createdBy && !('status' in request.resource.data));
    }

    match /tickets/{ticketId}/comments/{commentId} {
        allow read: if get(/databases/$(database)/documents/tickets/$(ticketId)).data.createdBy == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['mantenimiento', 'admin'];
        allow create: if get(/databases/$(database)/documents/tickets/$(ticketId)).data.createdBy == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['mantenimiento', 'admin'];
    }
  }
}
