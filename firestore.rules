rules_version = '2';
 
service cloud.firestore {
  match /databases/{database}/documents {
 
    function isSignedIn() {
      return request.auth != null;
    }

    // A more robust way to check for a role, especially for 'admin'.
    // It safely checks if the user document and role exist.
    function getUser(uid) {
      return get(/databases/$(database)/documents/users/$(uid));
    }

    function getUserRole(uid) {
      let userDoc = getUser(uid);
      if (!exists(/databases/$(database)/documents/users/$(uid))) {
        return 'none';
      }
      return userDoc.data.role;
    }

    function getUserDepartmentId(uid) {
      let userDoc = getUser(uid);
      if (!exists(/databases/$(database)/documents/users/$(uid))) {
        return null;
      }
      return userDoc.data.departmentId;
    }

    function isOperario() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'operario';
    }

    function isMantenimiento() {
      return isSignedIn() && getUserRole(request.auth.uid) in ['mantenimiento', 'admin'];
    }

    function isAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'admin';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
 
    match /users/{userId} {
      allow get: if isOwner(userId) || isMantenimiento();
      allow list: if isMantenimiento();
      allow create: if isSignedIn(); // Allow any signed-in user to create their own user doc (on first sign-in)
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin() && !isOwner(userId);
    }

    match /sites/{siteId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /departments/{departmentId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /assets/{assetId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    function canReadTicket(ticketData) {
      if (!isSignedIn()) return false;
      if (ticketData == null) return false;

      return isMantenimiento() ||
        ticketData.createdBy == request.auth.uid ||
        ticketData.assignedTo == request.auth.uid ||
        (ticketData.departmentId != null && ticketData.departmentId == getUserDepartmentId(request.auth.uid));
    }

    match /tickets/{ticketId} {
      allow get, list: if canReadTicket(resource.data);
      allow create: if isSignedIn() && request.resource.data.createdBy == request.auth.uid;
      allow delete: if isAdmin();
      allow update: if
        isMantenimiento() ||
        (isOperario() && resource.data.createdBy == request.auth.uid &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['priority', 'updatedAt']));
    }

    match /tickets/{ticketId}/comments/{commentId} {
      allow read, create: if canReadTicket(get(/databases/$(database)/documents/tickets/$(ticketId)).data);
      allow update, delete: if isAdmin();
    }

    match /settings/{settingId} {
      // Allow anyone to read settings (for the logo on the login page)
      allow read: if true;
      allow write: if isAdmin(); // Only admins can change settings
    }

    // Basic maintenance tasks collection permissions
    match /tasks/{taskId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isMantenimiento();
    }
  }
}
