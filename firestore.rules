rules_version = '2';
 
service cloud.firestore {
  match /databases/{database}/documents {
 
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(userId) {
      // Check for existence before accessing data to prevent errors on non-existent users
      return exists(/databases/$(database)/documents/users/$(userId))
        ? get(/databases/$(database)/documents/users/$(userId)).data
        : null;
    }

    function isUserRole(role) {
      if (request.auth == null) {
        return false;
      }
      let userData = getUserData(request.auth.uid);
      return userData != null && userData.role == role;
    }

    function isAdmin() {
      return isUserRole('admin');
    }

    function isMantenimiento() {
      return isUserRole('mantenimiento') || isAdmin();
    }
 
    // Any authenticated user can read user profiles (to list technicians, creators, etc.)
    // Only admins can create/delete users.
    // An admin or the user themselves can update a profile.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || isOwner(userId);
    }

    // Catalog collections are readable by any authenticated user for forms and lists.
    // Writable only by admins.
    match /sites/{siteId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /departments/{departmentId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /assets/{assetId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Tickets can be created by any authenticated user.
    // Reading is allowed for maintenance/admins, or the user who created it.
    // Deleting is for admins only.
    // Updating has granular role-based logic.
    match /tickets/{ticketId} {
        allow read: if isMantenimiento() || resource.data.createdBy == request.auth.uid;
        allow create: if request.auth.uid != null;
        allow delete: if isAdmin();
        
        // Granular update rules
        allow update: if 
          // Admins and Maintenance can update most fields.
          isMantenimiento() ||
          // The creator can ONLY update the priority and nothing else (plus updatedAt).
          (request.auth.uid == resource.data.createdBy &&
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['priority', 'updatedAt']));
    }

    // Comments can be read/created by maintenance/admins or the ticket creator.
    match /tickets/{ticketId}/comments/{commentId} {
        allow read, create: if isMantenimiento() || get(/databases/$(database)/documents/tickets/$(ticketId)).data.createdBy == request.auth.uid;
        allow update, delete: if isAdmin();
    }

    // App settings (like the logo) are publicly readable.
    // Only admins can change them.
    match /settings/{settingId} {
      allow read: true;
      allow write: if isAdmin();
    }
  }
}
