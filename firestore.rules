rules_version = '2';
 
service cloud.firestore {
  match /databases/{database}/documents {
 
    function isAdmin() {
      if (request.auth == null) {
        return false;
      }
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) && userDoc.data.role == 'admin';
    }

    function isMantenimiento() {
      if (request.auth == null) {
        return false;
      }
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) && (userDoc.data.role == 'mantenimiento' || userDoc.data.role == 'admin');
    }
 
    match /users/{userId} {
      allow get: if request.auth.uid == userId || isMantenimiento();
      allow list: if isMantenimiento();
      allow create: if request.auth.uid == userId || isAdmin();
      allow update: if isAdmin() || request.auth.uid == userId;
      allow delete: if isAdmin() && request.auth.uid != userId;
    }

    match /sites/{siteId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /departments/{departmentId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /assets/{assetId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /tickets/{ticketId} {
      allow get: if request.auth != null && (isMantenimiento() || resource.data.createdBy == request.auth.uid || resource.data.assignedTo == request.auth.uid);
      // For list, we allow any authenticated user to attempt the query.
      // The actual security is enforced by the client query logic, which constructs
      // a query that Firestore can validate against 'get' rules for each document.
      // An operario's query will be `where('createdBy', '==', uid)` or `where('assignedTo', '==', uid)`
      // which is secure. An admin/mantenimiento will fetch all, which is also allowed.
      allow list: if request.auth != null;
      allow create: if request.auth != null;
      allow delete: if isAdmin();
      allow update: if 
        isMantenimiento() ||
        (request.auth.uid == resource.data.createdBy &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['priority', 'updatedAt']));
    }

    match /tickets/{ticketId}/comments/{commentId} {
      allow read, create: if isMantenimiento() || get(/databases/$(database)/documents/tickets/$(ticketId)).data.createdBy == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    match /settings/{settingId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
