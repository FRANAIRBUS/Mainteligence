rules_version = '2';
 
service cloud.firestore {
  match /databases/{database}/documents {
 
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return getUserRole() == 'admin';
    }

    function isMantenimiento() {
        return getUserRole() in ['mantenimiento', 'admin'];
    }
 
    match /users/{userId} {
      allow read;
      allow create: if isOwner(userId) || isAdmin();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    match /sites/{siteId} {
        allow read, write: if isAdmin();
    }

    match /departments/{departmentId} {
        allow read, write: if isAdmin();
    }

    match /assets/{assetId} {
      allow get, create, update, delete: if isAdmin();
    }

    match /assets {
      allow list: if request.auth != null;
    }

    match /tickets/{ticketId} {
        allow read: if isMantenimiento() || request.auth.uid == resource.data.createdBy;
        allow create: if request.auth.uid != null;
        allow update: if isMantenimiento() || (request.auth.uid == resource.data.createdBy && !('status' in request.resource.data));
    }

    match /tickets/{ticketId}/comments/{commentId} {
        allow read: if isMantenimiento() || get(/databases/$(database)/documents/tickets/$(ticketId)).data.createdBy == request.auth.uid;
        allow create: if isMantenimiento() || get(/databases/$(database)/documents/tickets/$(ticketId)).data.createdBy == request.auth.uid;
    }

    match /settings/{settingId} {
      allow read;
      allow write: if isAdmin();
    }
  }
}
