rules_version = '2';
 
service cloud.firestore {
  match /databases/{database}/documents {
 
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isUserRole(role) {
      if (request.auth == null) {
        return false;
      }
      let userData = getUserData(request.auth.uid);
      return userData != null && userData.role == role;
    }

    function isAdmin() {
      return isUserRole('admin');
    }

    function isMantenimiento() {
      return isUserRole('mantenimiento') || isAdmin();
    }
 
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || isOwner(userId);
    }

    match /sites/{siteId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /departments/{departmentId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /assets/{assetId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /tickets/{ticketId} {
        allow read: if isMantenimiento() || resource.data.createdBy == request.auth.uid;
        allow create: if request.auth.uid != null;
        allow delete: if isAdmin();
        
        allow update: if 
          // Admins and Maintenance can update most fields.
          isMantenimiento() ||
          // The creator can ONLY update the priority and nothing else (plus updatedAt).
          (request.auth.uid == resource.data.createdBy &&
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['priority', 'updatedAt']));
    }

    match /tickets/{ticketId}/comments/{commentId} {
        allow read, create: if isMantenimiento() || get(/databases/$(database)/documents/tickets/$(ticketId)).data.createdBy == request.auth.uid;
        allow update, delete: if isAdmin();
    }

    match /settings/{settingId} {
      allow read: true;
      allow write: if isAdmin();
    }
  }
}
