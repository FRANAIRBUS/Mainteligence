rules_version = '2';
 
service cloud.firestore {
  match /databases/{database}/documents {
 
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isUserRole(role) {
       if (request.auth == null) {
        return false;
      }
      return getUserData(request.auth.uid).role == role;
    }

    function isAdmin() {
      return isUserRole('admin');
    }

    function isMantenimiento() {
        return isUserRole('mantenimiento') || isAdmin();
    }
 
    // Users can be read by any authenticated user (to list technicians, etc.)
    // Only admins can create/delete users.
    // Users can update their own profile.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || isOwner(userId);
    }

    // Catalog collections are readable by any authenticated user
    // but only writable by admins.
    match /sites/{siteId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

    match /departments/{departmentId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

    match /assets/{assetId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Tickets can be read by maintenance/admins, or by the user who created it.
    // Creation is allowed for any authenticated user.
    // Update rules are granular based on role.
    match /tickets/{ticketId} {
        allow read: if isMantenimiento() || request.auth.uid == resource.data.createdBy;
        
        allow create: if request.auth.uid != null;
        
        allow update: if 
          // Admin and Mantenimiento can update most fields
          isMantenimiento() ||
          // The creator can ONLY update the priority
          (request.auth.uid == resource.data.createdBy &&
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['priority', 'updatedAt']));
            
        allow delete: if isAdmin();
    }

    // Comments can be read/created by maintenance/admins or the ticket creator.
    match /tickets/{ticketId}/comments/{commentId} {
        allow read: if isMantenimiento() || get(/databases/$(database)/documents/tickets/$(ticketId)).data.createdBy == request.auth.uid;
        allow create: if isMantenimiento() || get(/databases/$(database)/documents/tickets/$(ticketId)).data.createdBy == request.auth.uid;
    }

    // App settings (like the logo) are publicly readable.
    // Only admins can change them.
    match /settings/{settingId} {
      allow read;
      allow write: if isAdmin();
    }
  }
}
