rules_version = '2';
 
service cloud.firestore {
  match /databases/{database}/documents {
 
    function isAdmin() {
      if (request.auth == null) {
        return false;
      }
      let userRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return userRole == 'admin';
    }

    function isMantenimiento() {
      if (request.auth == null) {
        return false;
      }
      let userRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return userRole == 'mantenimiento' || userRole == 'admin';
    }
 
    match /users/{userId} {
      allow get: if request.auth.uid == userId || isMantenimiento();
      allow list: if isMantenimiento();
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || request.auth.uid == userId;
    }

    match /sites/{siteId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /departments/{departmentId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /assets/{assetId} {
      allow get, list: if isMantenimiento();
      allow write: if isAdmin();
    }

    match /tickets/{ticketId} {
      allow get: if request.auth != null && (isMantenimiento() || resource.data.createdBy == request.auth.uid || resource.data.assignedTo == request.auth.uid);
      allow list: if request.auth != null && (isMantenimiento() || 
                    (request.query.where.field == 'createdBy' && request.query.where.value == request.auth.uid) ||
                    (request.query.where.field == 'assignedTo' && request.query.where.value == request.auth.uid) ||
                    (request.query.where.filters[0].field.string_value == 'createdBy' && request.query.where.filters[0].value.string_value == request.auth.uid) ||
                    (request.query.where.filters[1].field.string_value == 'assignedTo' && request.query.where.filters[1].value.string_value == request.auth.uid)
                    );
      allow create: if request.auth != null;
      allow delete: if isAdmin();
      allow update: if 
        isMantenimiento() ||
        (request.auth.uid == resource.data.createdBy &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['priority', 'updatedAt']));
    }

    match /tickets/{ticketId}/comments/{commentId} {
      allow read, create: if isMantenimiento() || get(/databases/$(database)/documents/tickets/$(ticketId)).data.createdBy == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    match /settings/{settingId} {
      allow read: true;
      allow write: if isAdmin();
    }
  }
}
